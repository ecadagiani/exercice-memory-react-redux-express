    meta(name='description' content='Memory game on JS equality')
    title Memory JS

body
    div(class='App')
        div(class='BoardGame__view')
            header(class='BoardGame__header')
                h1(class='BoardGame__title')
                    | Memory JS
                div(class='BoardGame__titleRight')
                    span(class='BoardGame__time TimeCounter' id='TimeCounter')
                    button(class='materialButton BoardGame__buttonReset')
                        | Recommencer
            div(class='BoardGame__cardContainer' style=`grid-template-columns: repeat(${width}, 1fr); grid-template-rows: repeat(${height}, 1fr);`)
                each card, index in cardList
                    div(id=index data-index=index data-identity=card.identity class='Card')
                        div(class='Card__flipper')
                            div(class='Card__front')
                                span ?
                            div(class='Card__back')
                                img(src=`./images/${card.identity}.svg` alt=card.identity class='Card__backImage')
                            span(class='Card__text')
                                #{card.text}
                                // todo escape char

script.
    window.pyrite = {};
    window.pyrite.cardList=!{JSON.stringify(cardList)};

script(src='./app.js' )
